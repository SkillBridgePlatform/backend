# .replit - place at the root of your Repl (same folder as package.json)
entrypoint = "dist/main.js"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
# Command to run your NestJS server in deployment
run = ["node", "dist/main.js"]
deploymentTarget = "autoscale"
ignorePorts = false

[agent]
expertMode = false