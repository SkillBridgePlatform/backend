# .replit - place at the root of your Repl (same folder as package.json)
entrypoint = "dist/src/main.js"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
# Build first, then run your NestJS server
run = "npm run build && node dist/src/main.js"
deploymentTarget = "autoscale"
ignorePorts = false

[agent]
expertMode = false